<body>

  <!-- BARRA LOGIN / SALUDO -->
  <div class="barra-flotante-login" id="barraLogin">
    <div class="barra-contenido-login" id="barraContenidoLogin">
      <div class="grupo-botones-login" id="izquierdaLogin">
        <button class="btn-login" id="btnIniciarSesion" onclick="mostrarLogin()">Iniciar sesión</button>
        <span id="saludoUsuario" style="color:white; font-weight:bold;"></span>
      </div>
      <div class="grupo-botones-login" id="derechaLogin">
        <a href="https://www.prenoticia.com/p/suscribirme-prenoticia.html" class="btn-login" target="_blank" rel="noopener noreferrer">Suscribirme</a>
        <a href="https://www.prenoticia.com/mi-cuenta-ayuda" class="btn-login" target="_blank" rel="noopener noreferrer">Ayuda</a>
      </div>

      <div class="popup-login" id="popupLogin">
        <input type="email" id="inputEmail" placeholder="Tu correo" />
        <button class="btn-login" onclick="validarEmail()">Ingresar</button>
        <button class="btn-login" onclick="cerrarLogin()">✕</button>
        <span class="mensaje-error" id="mensajeError"></span>
      </div>
    </div>
  </div>

  <!-- BARRA FLOTANTE CON IFRAME -->
  <div id="contenedorBarraFlotante">
    <div id="ventana-flotante">
      <div class="contenido">
        <iframe src="https://daviddanaher.github.io/Prenoticia/"></iframe>
      </div>
    </div>
  </div>

  <!-- PANEL MI CUENTA -->
  <div id="contenedorMiCuenta" class="panel-cuenta" style="display:none;">
    <h1>Mi Cuenta</h1>
    <div id="contenidoCuenta"></div>
  </div>

<script>
  // Usuarios (compartidos para ambas barras y panel)
  const usuarios = {
    "mauricioacostacom@gmail.com": {
      activo: true,
      nombre: "Mauricio",
      apellido: "Acosta Danaher",
      email: "mauricioacostacom@gmail.com",
      medioPago: "Mercado Pago",
      pais: "Argentina",
      montoSuscripcion: "$2.000",
      ultimoPago: "31 de julio de 2025",
      proximoPago: "31 de septiembre de 2025",
      emailVerificado: true
    },
    "luciacarpio20@gmail.com": {
      activo: false,
      nombre: "Maria",
      apellido: "Carpio Peralta",
      email: "luciacarpio20@gmail.com",
      medioPago: "PayPal",
      pais: "Chile",
      montoSuscripcion: "$1.000",
      ultimoPago: "15 de junio de 2025",
      proximoPago: "15 de julio de 2025",
      emailVerificado: false,
      deuda: "$1.000"
    }
  };

  // --- Funciones Barra Login ---

  function mostrarLogin() {
    document.getElementById("popupLogin").style.display = "flex";
    document.getElementById("mensajeError").style.display = "none";
    document.getElementById("inputEmail").focus();
  }

  function cerrarLogin() {
    document.getElementById("popupLogin").style.display = "none";
    document.getElementById("inputEmail").value = "";
  }

  function validarEmail() {
    const email = document.getElementById("inputEmail").value.trim().toLowerCase();
    const mensaje = document.getElementById("mensajeError");

    if (!email) {
      mensaje.textContent = "Por favor, ingresá tu correo electrónico";
      mensaje.style.display = "inline-block";
      return;
    }

    if (usuarios[email]) {
      if (usuarios[email].activo) {
        // Guardar usuario logueado con email (completo datos)
        localStorage.setItem("usuarioLogueado", JSON.stringify({ email: email }));
        cargarUsuarioLogueado();
        cerrarLogin();
      } else {
        mensaje.textContent = `Tu cuenta registra una deuda impaga de ${usuarios[email].deuda}.`;
        mensaje.style.display = "inline-block";
      }
    } else {
      mensaje.textContent = "El correo ingresado no está suscripto.";
      mensaje.style.display = "inline-block";
    }
  }

  function mostrarUsuario(nombre) {
    document.getElementById("btnIniciarSesion").style.display = "none";
    document.getElementById("saludoUsuario").textContent = `Hola, ${nombre}`;

    const derecha = document.getElementById("derechaLogin");
    derecha.innerHTML = "";

    const btnCuenta = document.createElement("a");
    btnCuenta.textContent = "Mi cuenta";
    btnCuenta.className = "btn-login";
    btnCuenta.href = "#"; // No navegamos, solo mostramos el panel
    btnCuenta.onclick = (e) => {
      e.preventDefault();
      mostrarPanelMiCuenta();
    };

    const btnCerrar = document.createElement("button");
    btnCerrar.textContent = "Cerrar sesión";
    btnCerrar.className = "btn-login";
    btnCerrar.onclick = () => {
      localStorage.removeItem("usuarioLogueado");
      location.reload();
    };

    derecha.appendChild(btnCuenta);
    derecha.appendChild(btnCerrar);
  }

  // --- Funciones PANEL MI CUENTA ---

  function mostrarPanelMiCuenta() {
    document.getElementById("contenedorMiCuenta").style.display = "block";
    const usuarioLogueado = JSON.parse(localStorage.getItem("usuarioLogueado"));
    if (!usuarioLogueado || !usuarioLogueado.email) {
      alert("Debés iniciar sesión para ver tu cuenta.");
      return;
    }
    const usuario = usuarios[usuarioLogueado.email];
    if (!usuario) {
      alert("Usuario no encontrado.");
      return;
    }
    mostrarPanel(usuario);
    // Scroll suave al panel
    document.getElementById("contenedorMiCuenta").scrollIntoView({behavior: "smooth"});
  }

  function mostrarPanel(usuario) {
    const cont = document.getElementById("contenidoCuenta");

    if (!usuario) {
      cont.innerHTML = `<p>No estás logueado. Por favor <a href="#" id="linkLoginPanel">iniciá sesión</a> para ver tu cuenta.</p>`;
      document.getElementById("linkLoginPanel").addEventListener("click", (e) => {
        e.preventDefault();
        mostrarLogin();
      });
      return;
    }

    if (!usuario.activo) {
      cont.innerHTML = `<p>Tu cuenta no está activa. Por favor regularizá tu situación.</p>
        <p><b>Deuda actual:</b> ${usuario.deuda || "No disponible"}</p>`;
      return;
    }

    let infoLegal = "";
    switch (usuario.pais?.toLowerCase()) {
      case "argentina":
        infoLegal = `<p><b>Información legal para Argentina:</b> De acuerdo a la Ley de Defensa del Consumidor, tenés derecho a dar de baja tu suscripción en cualquier momento y sin penalización. Para solicitar la baja, usá el botón que figura abajo o contactanos a soporte.</p>`;
        break;
      case "peru":
        infoLegal = `<p><b>Información legal para Perú:</b> Según la Ley de Protección al Consumidor, podés cancelar tu suscripción sin cargos adicionales y con derecho a recibir un comprobante. Contactá soporte si necesitás ayuda.</p>`;
        break;
      case "chile":
        infoLegal = `<p><b>Información legal para Chile:</b> Conforme a la Ley del Consumidor, podés dar de baja tu suscripción en cualquier momento y solicitar la devolución proporcional de pagos anticipados si aplica.</p>`;
        break;
      default:
        infoLegal = `<p><b>Información legal:</b> Podés gestionar tu suscripción según los términos y condiciones vigentes en tu país. Para más información, contactá soporte.</p>`;
        break;
    }

    cont.innerHTML = `
      <div class="fila"><div class="etiqueta">Nombre:</div><div class="valor">${usuario.nombre}</div></div>
      <div class="fila"><div class="etiqueta">Apellido:</div><div class="valor">${usuario.apellido}</div></div>
      <div class="fila"><div class="etiqueta">Email:</div><div class="valor">${usuario.email}
        ${usuario.emailVerificado ? '<span class="verificado" title="Email verificado">✅</span>' : ''}
      </div></div>
      <div class="fila"><div class="etiqueta">Método de pago:</div><div class="valor">${usuario.medioPago || "No especificado"}</div></div>
      <div class="fila"><div class="etiqueta">País:</div><div class="valor">${usuario.pais || "No especificado"}</div></div>
      <div class="fila"><div class="etiqueta">Monto actual suscripción:</div><div class="valor">${usuario.montoSuscripcion || "No disponible"}</div></div>
      <div class="fila"><div class="etiqueta">Último pago:</div><div class="valor">${usuario.ultimoPago || "No disponible"}</div></div>
      <div class="fila"><div class="etiqueta">Próximo pago:</div><div class="valor">${usuario.proximoPago || "No disponible"}</div></div>

      <a href="https://www.prenoticia.com/baja-suscripción" target="_blank" class="btn-baja">Dar de baja suscripción</a>

      <div class="info-legal">${infoLegal}</div>
    `;
  }

  // --- Funciones BARRA FLOTANTE ---
  const ventana = document.getElementById("ventana-flotante");

  function esEscritorio() {
    return window.innerWidth > 768;
  }

  function actualizarBarra() {
    if (!esEscritorio()) {
      ventana.classList.remove("oculto");
      ventana.style.top = "50px";
      ventana.style.left = "0";
      ventana.style.width = "100vw";
      ventana.style.borderRadius = "0";
      return;
    }

    const scrollY = window.pageYOffset;

    if (scrollY === 0) {
      ventana.classList.remove("oculto");
      ventana.style.top = "75px";
      ventana.style.left = "0";
      ventana.style.width = "100vw";
      ventana.style.borderRadius = "0";
    } else if (scrollY > 0 && scrollY < 200) {
      ventana.classList.add("oculto");
    } else if (scrollY >= 200) {
      ventana.classList.remove("oculto");
      ventana.style.top = "45px";
      ventana.style.left = "0";
      ventana.style.width = "100vw";
      ventana.style.borderRadius = "0";
    }
  }

  window.addEventListener("scroll", actualizarBarra);
  window.addEventListener("load", actualizarBarra);
  window.addEventListener("resize", actualizarBarra);

  // --- Cargar estado de usuario logueado para ambas barras ---
  function cargarUsuarioLogueado() {
    const usuarioLogueado = JSON.parse(localStorage.getItem("usuarioLogueado"));
    if (!usuarioLogueado || !usuarioLogueado.email) {
      // Mostrar boton iniciar sesión y ocultar saludo y botones cuenta/cerrar sesión
      document.getElementById("btnIniciarSesion").style.display = "inline-flex";
      document.getElementById("saludoUsuario").textContent = "";
      document.getElementById("derechaLogin").innerHTML = `
        <a href="https://www.prenoticia.com/p/suscribirme-prenoticia.html" class="btn-login" target="_blank" rel="noopener noreferrer">Suscribirme</a>
        <a href="https://www.prenoticia.com/mi-cuenta-ayuda" class="btn-login" target="_blank" rel="noopener noreferrer">Ayuda</a>
      `;
      // Ocultar panel mi cuenta si estaba visible
      document.getElementById("contenedorMiCuenta").style.display = "none";
      return;
    }

    // Buscar usuario completo
    const usuario = usuarios[usuarioLogueado.email];
    if (!usuario || !usuario.activo) {
      // En caso de usuario con deuda o no activo, forzar logout
      localStorage.removeItem("usuarioLogueado");
      cargarUsuarioLogueado();
      return;
    }

    mostrarUsuario(usuario.nombre);
  }

  // Al cargar página
  window.onload = () => {
    cargarUsuarioLogueado();
  };

</script>

</body>
</html>
